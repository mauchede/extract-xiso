#!/bin/bash
set -e

[[ -z $IMAGE ]] && IMAGE="mauchede/extract-xiso"
[[ -z $TAG ]] && TAG="2.7.1"

docker run \
    --rm \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/localtime:/etc/localtime:ro \
    -v "$HOME:$HOME" \
    -v "$PWD:$PWD" \
    -u $USER \
    -w "$PWD" \
    $IMAGE:$TAG "$@"
